<script>
(function(){
  const slides = Array.from(document.querySelectorAll('.slide'));
  const pager = document.getElementById('pager');
  let idx = 0;
  function show(i){
    slides.forEach(s=>s.classList.remove('active'));
    slides[i].classList.add('active');
    pager.textContent = (i+1) + ' / ' + slides.length;
    // scroll to top of slide for mobile
    window.scrollTo({top:0,behavior:'smooth'});
  }
  document.getElementById('next').addEventListener('click', ()=>{
    idx = Math.min(idx+1, slides.length-1);
    show(idx);
  });
  document.getElementById('prev').addEventListener('click', ()=>{
    idx = Math.max(idx-1, 0);
    show(idx);
  });
  document.addEventListener('keydown', function(ev){
    if(ev.key === 'ArrowRight') { idx = Math.min(idx+1, slides.length-1); show(idx); }
    if(ev.key === 'ArrowLeft')  { idx = Math.max(idx-1, 0); show(idx); }
    if(ev.key === 'Home') { idx = 0; show(idx); }
    if(ev.key === 'End') { idx = slides.length-1; show(idx); }
  });
  // expose show for potential deep links
  window.showSlide = show;
  show(0);
})();
</script>
